#!/bin/bash

# â”€â”€ Tailscale Auto-Install â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€

echo "ðŸ› ï¸  Starte automatische Tailscale-Installation..."

# curl installieren falls nicht vorhanden
if ! command -v curl >/dev/null 2>&1; then
  echo -e "\nâš ï¸  'curl' ist nicht installiert. Wird jetzt automatisch installiert..."
  sudo apt update && sudo apt install -y curl
fi

# Tailscale installieren
curl -fsSL https://tailscale.com/install.sh | sh

# Parameter vorbereiten
advertise_arg=""
exitnode_arg="--advertise-exit-node"
dns_arg="--accept-dns=true"

# Subnet automatisch erkennen
auto_subnet=$(ip -o -f inet addr show | awk '/scope global/ {
    split($4, a, "/");
    split(a[1], ip, ".");
    printf "%s.%s.%s.0/24", ip[1], ip[2], ip[3];
    exit
}')
advertise_arg="--advertise-routes=${auto_subnet}"

# IPv4/IPv6 Forwarding aktivieren
echo -e "\nðŸŒ Subnet-Routing aktiv â€“ aktiviere IPv4 & IPv6 Forwarding..."
sudo sed -i '/net.ipv4.ip_forward/d' /etc/sysctl.conf
sudo sed -i '/net.ipv6.conf.all.forwarding/d' /etc/sysctl.conf
echo "net.ipv4.ip_forward=1" | sudo tee -a /etc/sysctl.conf
echo "net.ipv6.conf.all.forwarding=1" | sudo tee -a /etc/sysctl.conf
sudo sysctl -p

# Zusammenfassung anzeigen
echo -e "\nðŸš€ Tailscale wird mit folgenden Optionen gestartet:"
echo "   âž¤ Subnet Routing: ${auto_subnet}"
echo "   âž¤ Exit Node: aktiviert"
echo "   âž¤ DNS: aktiviert"

# Tailscale starten
echo -e "\nðŸŒ Bitte Ã¶ffne den folgenden Link im Browser, um dich mit Tailscale zu verbinden:"
sudo tailscale up $advertise_arg $exitnode_arg $dns_arg --qr 2>&1 | tee tailscale-login.log

echo -e "\nâœ… Tailscale wurde gestartet (Login-Link oben oder QR-Code)."
echo -e "\nðŸŸ¢ Tailscale lÃ¤uft | Subnet Routing aktiv | Exit Node | DNS aktiv"
